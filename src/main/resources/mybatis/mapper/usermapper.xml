<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kevin.server_monitor.security.mapper.UserMapper">
    <!-- User 테이블 가져오기 -->
    <select id="getUserList" resultType="com.kevin.server_monitor.security.vo.UserVo">
        SELECT * FROM monitoring_db.monitoring_admin
    </select>

    <!-- 회원가입 -->
    <insert id="insertUser">
        INSERT INTO monitoring_db.monitoring_admin (id, password, name, tel, author, memo)
        VALUES (#{id}, #{password}, #{name}, #{tel}, #{author}, #{memo})
    </insert>

    <!-- 회원 정보 가져오기 -->
    <select id="getUserById" resultType="com.kevin.server_monitor.security.vo.UserVo">
        SELECT *
        FROM monitoring_db.monitoring_admin
        WHERE id = #{id}
    </select>

    <!-- 회원정보 수정 -->
    <update id="updateUser">
        UPDATE monitoring_db.monitoring_admin
        SET name = #{name},
            memo = #{memo},
            tel = #{tel},
            password = #{password},
            author = #{author},
            memo = #{memo}
        WHERE admin_pk = #{admin_pk}
    </update>

    <!-- 탈퇴 -->
    <delete id="deleteUser">
        DELETE FROM monitoring_db.monitoring_admin WHERE admin_pk = #{admin_pk}
    </delete>
</mapper>